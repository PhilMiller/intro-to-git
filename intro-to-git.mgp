#   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
#   %page
#   
#   Window tagging
#   
#   	a window has one or multiple tags
#   	a tag is any word (for example 
#   %cont, font "slant", fore "blue"
#   work 
#   %cont, font "standard", fore "black"
#   or 
#   %cont, font "slant", fore "blue"
#   web
#   %cont, font "standard", fore "black"
#   )
#   	only windows in active tag are shown (
#   %cont, font "slant", fore "blue"
#   a view
#   %cont, font "standard", fore "black"
#   )
#   
#   %pause
#   	windows can have multiple geometries, one per tag
#   
#   %pause
#   	tags can be changed at any time
#   	tags can be automatically assigned
#   
#   %right
#   >
#   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
#   %page
#   
#   Window management modes
#   
#   	Classic windows (
#   %cont, font "slant", fore "blue"
#   floating
#   %cont, font "standard", fore "black"
#   )
#   	Fully maximized windows
#   	Paneled windows (like vim/emacs/konq splits)
#   	Stacked windows
#   
#   %newimage -xscrzoom 100 "management-modes.eps"
#   
#   %right
#   >
#   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
#   %page
#   
#   Using wmii - basics
#   
#   	Staring programs
#   %size 4
#   %pause
#   %font "typewriter", fore "black"
#       MOD-Enter       - 
#   %cont, font "standard", fore "black"
#   start a new xterm
#   %pause
#   %font "slant", fore "blue"
#       "X is only useful for opening up multiple xterms at once"
#   
#   %pause
#   %font "typewriter", fore "black"
#       MOD-p           - 
#   %cont, font "standard", fore "black"
#   run a program
#   %font "typewriter", fore "black"
#       MOD-a           - 
#   %cont, font "standard", fore "black"
#   run a 
#   %cont, font "slant", fore "blue"
#   wmiirc 
#   %cont, font "standard", fore "black"
#   action
#   
#   %pause,center
#   %newimage "window-mockup.png"
#   %left
#   
#   %pause
#   	Switching between programs
#   %pause
#   %size 4
#   %font "typewriter", fore "black"
#       MOD-j           - 
#   %cont, font "standard", fore "black"
#   switch focus to window above
#   %font "typewriter", fore "black"
#       MOD-k           - 
#   %cont, font "standard", fore "black"
#   switch focus to window below
#   
#   %right
#   >
#   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
#   %page
#   
#   Using wmii - movement
#   
#   %font "typewriter", size 25
#     K
#   H  L
#    J
#   %size 4, right
#   >
#   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
#   %page
#   
#   Using wmii - columns
#   
#   %size 4
#   %font "typewriter", fore "black"
#       MOD-Shift-h     - 
#   %cont, font "standard", fore "black"
#   move window to column on the left
#   %font "typewriter", fore "black"
#       MOD-Shift-l     - 
#   %cont, font "standard", fore "black"
#   move window to column on the right
#   
#   %font "typewriter", fore "black"
#       MOD-h           - 
#   %cont, font "standard", fore "black"
#   switch focus to column on the left
#   %font "typewriter", fore "black"
#       MOD-l           - 
#   %cont, font "standard", fore "black"
#   switch focus to column on the right
#   
#   %pause
#   %newimage -xscrzoom 100 "columns.eps"
#   
#   %right
#   >
#   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
#   %page
#   
#   Using wmii - layouts
#   
#   %pause
#   	Managed layout
#   %pause
#   %size 4
#   %font "typewriter", fore "black"
#       MOD-d           - 
#   %cont, font "standard", fore "black"
#   default layout (
#   %cont, font "slant", fore "blue"
#   panels 
#   %cont, font "standard", fore "black"
#   or 
#   %cont, font "slant", fore "blue"
#   splits
#   %cont, font "standard", fore "black"
#   )
#   
#   %font "typewriter", fore "black"
#       MOD-s           - 
#   %cont, font "standard", fore "black"
#   stacking layout
#   
#   %font "typewriter", fore "black"
#       MOD-m           - 
#   %cont, font "standard", fore "black"
#   maximized layout
#   
#   %pause
#   	Floating layout
#   %pause
#   %size 4
#   %font "typewriter", fore "black"
#       MOD-Space       - 
#   %cont, font "standard", fore "black"
#   toggle floating layer
#   
#   %font "typewriter", fore "black"
#       MOD-Shift-Space - 
#   %cont, font "standard", fore "black"
#   toggle window between floating & managed layers
#   
#   %right
#   >
#   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
#   %page
#   
#   Using wmii - tags
#   
#   %size 4
#   %font "typewriter", fore "black"
#       MOD-Number       - 
#   %cont, font "standard", fore "black"
#   switch to tag index
#   
#   %font "typewriter", fore "black"
#       MOD-Shift-Number - 
#   %cont, font "standard", fore "black"
#   set window tag to that of index
#   
#   %font "typewriter", fore "black"
#       MOD-Shift-r      - 
#   %cont, font "standard", fore "black"
#   retag current window
#   
#   %newimage "tags.png"
#   
#   %right
#   >
#   %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
#   %page
#   
#   Using wmii - extras
#   
#   %size 4
#   %font "typewriter", fore "black"
#       MOD-Shift-c   - 
#   %cont, font "standard", fore "black"
#   kill the program of the focused window
#   
#   %font "typewriter", fore "black"
#       MOD-,         - 
#   %cont, font "standard", fore "black"
#   go to the view on the left
#   %font "typewriter", fore "black"
#       MOD-.         - 
#   %cont, font "standard", fore "black"
#   go to the view on the right
#   
#   %font "typewriter", fore "black"
#       MOD-r         - 
#   %cont, font "standard", fore "black"
#   cycle between the current and last view (
#   %cont, font "slant", fore "blue"
#   tag
#   %cont, font "standard", fore "black"
#   )
#   %font "typewriter", fore "black"
#       MOD-Minus     - 
#   %cont, font "standard", fore "black"
#   walk through view history backwards
#   %font "typewriter", fore "black"
#       MOD-Plus      - 
#   %cont, font "standard", fore "black"
#   walk through view history forwards
#   
#   %font "typewriter", fore "black"
#       MOD2-Space    - 
#   %cont, font "standard", fore "black"
#   disable wmii event processing
#   
#   %pause
#   %font "typewriter", fore "black"
#       MOD-Control-y - 
